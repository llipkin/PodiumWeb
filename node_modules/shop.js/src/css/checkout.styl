$checkoutCardHeight = 22px

checkout
checkout-card
checkout-shippingaddress
  button
  .button
    border-width: 0

  .checkout-section
    margin-bottom: $themeElementPadding
    position: relative

    .secured-text
      position: relative
      right: 0
      height: 0
      top: calc(-1.75em - 10px)
      display: block
      float: right

      .lock-icon
        height: 16px
        position: relative
        top: 2px
        left: 4px

