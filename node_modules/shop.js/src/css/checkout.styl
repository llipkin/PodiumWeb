  card-number
    input

    .cards-accepted
      display: table
      width: 100%
      margin-top: $themeElementPadding * 0.5

      .card-logo
        height: $checkoutCardHeight
        margin-right:4px
        float: left
        opacity: .5
        transition opacity $themeTransitionTime ease-in-out

    &.amex .cards-accepted .amex-logo
        opacity: 1

    &.discover .cards-accepted .discover-logo
        opacity: 1

    &.jcb .cards-accepted .jcb-logo
        opacity: 1

    &.mastercard .cards-accepted .mastercard-logo
      opacity: 1

    &.visa .cards-accepted .visa-logo
        opacity: 1

  .stripe-logo
    height: $checkoutCardHeight
    float: right

    +below(400px)
      float: left
      margin-top: $themeElementPadding * 0.5

  .line1-line2
  .state-postal-code
    :first-child
      flex: 2
    :last-child
      flex: 1
