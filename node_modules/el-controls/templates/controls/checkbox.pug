#{ 'yield' }(from='input')
  .input-container(
    class='{invalid: errorMessage, valid: valid, labeled: label, checked: input.ref.get(input.name)}'
  )
    input(
      id='{ getId() }'
      name='{ getName() }'
      type='checkbox'
      onchange='{ change }'
      onblur='{ change }'
      checked='{ input.ref.get(input.name) }'
    )
  label(for='getId()')
#{ 'yield' }
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
