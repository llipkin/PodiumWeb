#{ 'yield' }(from='input')
  .input-container(
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
    input(
      id='{ getId() }'
      name='{ getName() }'
      type='{ type }'
      onchange='{ change }'
      onblur='{ change }'
      riot-value='{ getText() }'
      autocomplete='{ autocomplete }'
      autofocus='{ autofocus }'
      disabled='{ disabled }'
      maxlength='{ maxlength }'
      readonly='{ readonly }'
      placeholder='{ placeholder }'
    )
#{ 'yield' }(from='label')
  .label(
    class='{ active: getText() || placeholder }'
    if='{ label }'
  )
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }
