#{ 'yield' }(from='input')
  .input-container(
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
    textarea(
      id='{ getId() }'
      name='{ getName() }'
      onchange='{ change }'
      onblur='{ change }'
      rows='{ rows }'
      cols='{ cols }'
      disabled='{ disabled }'
      maxlength='{ maxlength }'
      placeholder='{ placeholder }'
      readonly='{ readonly }'
      wrap='{ wrap }'
    )
      | { getText() }
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }

