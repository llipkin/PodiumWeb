#{ 'yield' }(from='input')
  .input-wrapper(
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
    select(
      id='{ getId() }'
      name='{ getName() }'
      style='display: none'
      onchange='{ change }'
      onblur='{ change }'
      placeholder='{ placeholder }'
    )
#{ 'yield' }(from='label')
  .label.active(if='{ label }')
    | { label }
#{ 'yield' }(from='error')
  .error(if='{ errorMessage }')
    | { errorMessage }
#{ 'yield' }(from='instructions')
  .helper(if='{ instructions && !errorMessage }')
    | { instructions }
#{ 'yield' }

