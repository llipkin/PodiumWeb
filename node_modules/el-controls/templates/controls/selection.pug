#{ 'yield' }(from='input')
  .input-container(
    class='{invalid: errorMessage, valid: valid, labeled: label}'
  )
    select(
      id='{ getId() }'
      name='{ getName() }'
      onchange='{ change }'
      onblur='{ change }'
      autofocus='{ autofocus }'
      disabled='{ disabled || !hasOptions() }'
      multiple='{ multiple }'
      size='{ size }'
    )
      option(
        if='{ placeholder }'
        value=''
      )
        | { placeholder }
      option(
        each='{ v, k in options() }'
        value='{ k }'
        selected='{ k == input.ref.get(input.name) }'
      )
        | { v }
